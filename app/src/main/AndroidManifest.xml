<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="me.qiushui.uitransition">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/AppTheme.Main"
            android:name=".ui_trasition.ImageActivity"/>
        <activity
            android:theme="@style/AppTheme.Detail"
            android:name=".ui_trasition.DetailActivity"/>

        <activity android:name=".manual_transition.AnimeActivity"/>
        <activity android:name=".manual_transition.AnimeDetailActivity"/>
    </application>

</manifest>